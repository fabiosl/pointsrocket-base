<div class="row">
  <div class="col-md-12">
    <footer class="footer">
      <nav>
        <ul class="semibold mb0">
          <% if false %>
            <li>
              <a href="" title="Sobre nós">Sobre nós</a>
            </li>
            <li>
              <a href="" title="Política de Privacidade">Política de Privacidade</a>
            </li>
            <li>
              <a href="" title="Termos e Condições de uso">Termos e Condições de Uso</a>
            </li>
          <% end %>
          <li class="copyright normal">
            <% if @domain.present? %>
              <%= @domain.copyright %>
            <% else %>
              © 2016, PointsRocket. Todos os direitos reservados.
            <% end %>
          </li>
        </ul>
      </nav>

      <!-- Points about modal -->
      <div
        id="modal-points-about"
        class="modal fade"
        tabindex="-1"
        role="dialog"
        aria-labelledby="aboutModal"
      >
        <div class="modal-dialog modal-sm" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">
                <img src="<%= asset_url('favicon.png') %>" alt="Points Rocket">
                <span class="ml10">
                  <%= t('views.dashboard.topbar.about') %>
                </span>
              </h4>

            </div>
            <div class="modal-body">
              <p>
                <%= t('views.dashboard.topbar.about_html', community: @domain.name) %>
                <a href="http://pointsrocket.com" target="_blank">http://pointsrocket.com</a> 
              </p>
            </div>
          </div>
        </div>
      </div>
      <!-- /Points about modal -->
    </footer>
  </div>
</div>
