<!-- START Template Main -->
<section id="main" role="main">
    <!-- START Template Container -->
    <section class="container login-container">
        <div class="row">
          <div class="col-md-12">
            <!-- Brand -->
            <div class="text-center" style="margin-bottom:40px;">
              <% if @domain.dashboard_login_image.exists? %>
                <%= image_tag @domain.dashboard_login_image.url(:logo), class: 'mb20' %>
              <% end %>

              <h5 class="semibold text-muted mt-5"><%= t('.title') %></h5>
            </div>
            <!--/ Brand -->

          </div>
        </div>
        <!-- START row -->
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <!-- Login form -->
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'subscribe-form devise-subscribe-form', method: :put}) do |f| %>
              <%= f.hidden_field :reset_password_token, as: :hidden %>

              <!-- Alert message -->
              <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>">
                  <%= value %>
                </div>
              <% end %>

              <div class="form-group">
                <div class="form-stack has-icon pull-left">
                  <%= f.password_field :password, required: false, class: 'form-control input-lg', placeholder: t('.password.placeholder') %>
                  <i class="ico-lock2 form-control-icon"></i>
                </div>
              </div>

              <div class="form-group">
                <div class="form-stack has-icon pull-left">
                  <%= f.password_field :password_confirmation, required: false, class: 'form-control input-lg', placeholder: t('.password_confirmation.placeholder') %>
                  <i class="ico-lock2 form-control-icon"></i>
                </div>
              </div>

              <div class="form-group nm">
                <button type="submit" class="btn btn-block btn-success">
                  <%= t '.submit' %>
                </button>
              </div>
            <% end %>
          </div>
        </div>
        <!--/ END row -->
    </section>
    <!--/ END Template Container -->
</section>
<!--/ END Template Main -->

