<!-- START Template Main -->
<section id="main" role="main">
    <!-- START Template Container -->
    <section class="container login-container">
        <div class="row">
          <div class="col-md-12">
            <!-- Brand -->
            <div class="text-center mb30">
              <% if @domain.dashboard_login_image.exists? %>
                <%= image_tag @domain.dashboard_login_image.url(:logo), class: 'mb20' %>
              <% end %>

              <h5 class="login-page-title"><%= t('.title') %></h5>
            </div>
            <!--/ Brand -->

          </div>
        </div>
        <!-- START row -->
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <div class="panel">
              <div class="panel-body">
                <!-- Login form -->
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-login'}) do |f| %>
                  <%= devise_error_messages! %>

                  <!-- Alert message -->
                  <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>">
                      <%= value %>
                    </div>
                  <% end %>

                  <div class="form-group">
                    <div class="form-stack has-icon pull-left">
                      <%= f.text_field :email, required: false, autofocus: true, class: 'form-control input-lg', placeholder: t('.email.placeholder') %>
                      <i class="ico-mail2 form-control-icon"></i>
                    </div>
                  </div>

                  <div class="form-group nm">
                    <button type="submit" class="btn btn-block btn-success btn-ellipsis">
                      <%= t '.submit' %>
                    </button>
                  </div>

                <% end %>

              </div>
            </div>

            <% if @show_tokens_url %>
              <hr>

              <a href="<%= users_token_login_path %>" class="btn btn-block btn-small">
                <%= t 'devise.passwords.new_general.email.go_back' %>
              </a>
            <% end %>
          </div>
        </div>
        <!--/ END row -->
    </section>
    <!--/ END Template Container -->
</section>
<!--/ END Template Main -->

