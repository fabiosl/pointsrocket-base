<!-- START Template Main -->
<section id="main" role="main">
    <!-- START Template Container -->
    <section class="container login-container">
        <div class="row">
          <div class="col-md-12">
            <!-- Brand -->
            <div class="text-center mb30">
              <% if @domain.dashboard_login_image.exists? %>
                <%= image_tag @domain.dashboard_login_image.url(:logo), class: 'mb20' %>
              <% end %>

              <h5 class="login-page-title"><%= t '.title' %></h5>
            </div>
            <!--/ Brand -->

          </div>
        </div>
        <!-- START row -->
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">

            <div class="panel">
              <div class="panel-body">
                <!-- Login form -->
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-login'}) do |f| %>
                  <%= devise_error_messages! %>
                  <input style="display:none" type="text" name="user[email]"/>
                  <input style="display:none" type="password" name="user[password]"/>

                  <div class="form-group">
                    <div class="has-icon pull-left">
                      <%= f.text_field :email, required: false, autofocus: true, class: 'form-control', placeholder: 'Email' %>
                      <i class="ico-mail2 form-control-icon"></i>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="has-icon pull-left">
                      <%= f.text_field :name, required: false, class: 'form-control', placeholder: t('views.users.name') %>
                      <i class="ico-user2 form-control-icon"></i>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="has-icon pull-left">
                      <%= f.password_field :password, required: false, class: 'form-control', placeholder: t('views.users.password') %>
                      <i class="ico-lock2 form-control-icon"></i>
                    </div>
                  </div>

                  <% if @domain.login_terms_url.present? %>
                    <div class="mb15">
                      <%= t '.login_term_text_html', link: link_to(t(".terms"), @domain.login_terms_url, target: :_blank) %>
                    </div>
                  <% end %>

                  <div class="form-group nm">
                      <button type="submit" class="btn btn-block btn-success"><span class="semibold"><%= t '.submit' %></span></button>
                  </div>

                <% end %>

              </div>
            </div>

            <hr>

            <ul class="list-table">
              <li class="text-center">
                <%= link_to t(".sign_in"), new_user_session_path %>
              </li>
            </ul>

          </div>
        </div>
        <!--/ END row -->
    </section>
    <!--/ END Template Container -->
</section>
<!--/ END Template Main -->

