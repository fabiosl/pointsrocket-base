<div data-ng-app="trivias" class="trivias">
  <div class="row">
    <div class="col-lg-12">
      <ul class="list-table pa15 main-header">
        <li class="text-left" style="width: 90px;">
          <%= image_tag "cbfa/trivias-index-img.png" %>
        </li>
        <li class="text-left">
          <div class="main-title">Trivias</div>
          <p class="main-description">
            Entre nesta competição, faça seu TOUCHDOWN e concorra a prêmios!
          </p>
        </li>
      </ul>
    </div>

    <div class="col-lg-12">
        <% if not @play.stopped %>
          <% if @play.answers.any? %>
            <div class="trivia-index-footer">
              <p>
                Total de acertos hoje: <%= @play.answers.count %>
              </p>
            </div>
            <%= link_to "Continuar", make_trivia_trivias_path, class: 'btn-trivia' %>
          <% else %>
            <%= link_to "Inicitar trivia", make_trivia_trivias_path, class: 'btn-trivia' %>
          <% end %>
        <% else %>
          <div class="trivia-index-footer">
            <% if @play.stop_reason == 'time' %>
              <p>Você estourou o tempo no ultimo trivia.</p>
            <% end %>
            <% if @play.stop_reason == 'wrong' %>
              <p>Você errou no ultimo trivia.</p>
            <% end %>
          </div>
        <% end %>
    </div>

    <% if false %>
    <% @trivias.each do |trivia| %>
    <div class="col-lg-12">
      <div class="widget panel">
        <div class="panel-body">
          <h2 class="trivia-title">
            <%= trivia.title %>
          </h2>

          <h3 class="trivia-subtitle">
            Número de perguntas: <%= trivia.questions.count %>
          </h3>

          <!--/ Nav section -->

          <div>
            <%= link_to "Participar de trivia", answer_trivia_path(trivia) %>
          </div>
        </div>
        <!--/ panel body -->
      </div>
    </div>
    <% end%>
    <% end%>
  </div>
</div>

<%#= render 'trivias/trivias/modal/acerto' %>

