<!-- BROADCAST -->
<% if domain.broadcasts_enabled %>
  <hr class="mt10 mb10 activity-separator">
  
  <ul class="list-table">
    <li style="width:60px;">
      <div class="pos-relative w50 h50">
        <a href="<%= broadcasts_path %>">
          <div
            class="widget-image-container img-circle"
            style="background-image:url('<%= activity.image_url(:thumb) %>');" 
          ></div>
        </a>
        <span class="item-status-ico">
          <% if activity.done_by_user?(current_user) %>
            <i class="ico ico-checkmark text-success"></i>
          <% else %>
            <i class="ico ico-circle text-danger"></i>
          <% end %>
        </span>
      </div>
    </li>
    <li class="text-left">
      <a href="<%= broadcasts_path %>">
        <h5 class="semibold ellipsis nm">
          <%= link_to activity do %>
            <i class="ico-camera6"></i> <%= activity.title %>
          <% end %>
        </h5>
        <p class="info-list text-default ellipsis">
          <span>
            <i class="ico-calendar3"></i> <%= activity.schedule_time_str %>
          </span>
          <% if activity.badge %>
            <span>
              <i class="ico-medal"></i> <%= activity.badge_name %>
            </span>
          <% end %>
          <% if activity.points > 0 %>
          <span>
            <i class="ico-trophy"></i> <%= activity.points %> <%= t('views.general.points') %>
          </span>
          <% end %>
          <br>
          <span>
            <i class="ico-users"></i>
            <%= t('views.general.views', count: activity.visualizations.size) %>
          </span>
        </p>
      </a>
    </li>
  </ul>
<% end %>
<!--/ BROADCAST -->