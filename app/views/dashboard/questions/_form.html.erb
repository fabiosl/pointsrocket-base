<%= form_for(@question, html: { class: 'form-async-editable' }) do |f| %>
  <div class="row">
    <div class="col-md-8">
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title ellipsis"><i class="ico-pen4"></i> <%= t('views.forum.index.ask_question') %></h3>
        </div>
        <div class="panel-body">
          <% unless @step.nil? %>
            <%= f.hidden_field :step_id, value: @step.id %>
          <% end %>

          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder: t('views.forum.index.placeholders.title') %>
          </div>
          <div class="form-group">
            <%= f.text_area :content, class: "form-control textarea_content hide", rows: 3, placeholder: t('views.forum.index.placeholders.content') %>
            <div
              class="form-control editable-content"
              contenteditable="true"
              placeholder="<%= t('views.forum.index.placeholders.content') %>"
            ><%= @question.content.html_safe if @question.content %></div>
          </div>

          <div class="form-group">
            <%= f.file_field :archive, class: "form-control" %>
          </div>

          <div class="form-group">
            <% if params[:action] == "edit" %>
              <%= f.submit t('views.general.buttons.save'), class: "btn btn-sm btn-success" %>
            <% else %>
              <%= f.submit t('views.forum.index.buttons.create_question'), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
