<h2 class="mt0 mb25">Dashboard</h2>
<div class="row">
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="table-layout animation delay animating fadeInDown">
      <div class="col-xs-1 panel bgcolor-info text-center">
          <div class="ico-chart fsize24"></div>
      </div>
      <div class="col-xs-3 panel">
        <a href="dashboard/general">
          <div class="panel-body text-center">
            <h4 class="text"><%= t 'views.dashboard.admin_dashboard.general.title' %></h4>
          </div>
        </a>
      </div>
      </a>
    </div>
  </div>

  <% if @domain.peer_recognition_enabled %>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <div class="table-layout animation delay animating fadeInDown">
        <div class="col-xs-1 panel bgcolor-info text-center">
            <div class="ico-users2 fsize24"></div>
        </div>
        <div class="col-xs-3 panel">
          <a href="dashboard/peer_recognition">
            <div class="panel-body text-center">
              <h4 class="text"><%= t 'views.dashboard.admin_dashboard.peer_recognition.title' %></h4>
            </div>
          </a>
        </div>
      </div>
    </div>
  <% end %>

  <% if @domain.hashtag_challenges_enabled %>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <div class="table-layout animation delay animating fadeInDown">
        <div class="col-xs-1 panel bgcolor-info text-center">
            <div class="fsize24">#</div>
        </div>
        <div class="col-xs-3 panel">
          <a href="dashboard/hashtag_challenges">
            <div class="panel-body text-center">
              <h4 class="text"><%= t 'views.dashboard.admin_dashboard.hashtag_challenges.title' %></h4>
            </div>
          </a>
          <a
            href="#"
            class="panel-ribbon panel-ribbon-danger pull-right"
            data-html="true"
            data-container="body"
            data-toggle="popover"
            data-trigger="hover"
            data-placement="left"
            data-content="<%= t 'views.dashboard.admin_dashboard.hashtag_challenges.warning' %>"
          >
            <i class="ico-notification2"></i>
          </a>
        </div>
      </div>
    </div>
  <% end %>

  <% if @domain.employee_advocacy_enabled %>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <div class="table-layout animation delay animating fadeInDown">
        <div class="col-xs-1 panel bgcolor-info text-center">
            <div class="ico-newspaper fsize24"></div>
        </div>
        <div class="col-xs-3 panel">
          <a href="dashboard/news">
            <div class="panel-body text-center">
              <h4 class="text"><%= t 'views.dashboard.admin_dashboard.news.title' %></h4>
            </div>
          </a>
        </div>
        </a>
      </div>
    </div>
  <% end %>
</div>