<%= form_for(:question, url: questions_path, html: { class: 'form-async-editable' }) do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title ellipsis">
            <i class="ico-pen4"></i>
            <%= t('views.forum.index.ask_question') %>
          </h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder: t('views.forum.index.placeholders.title') %>
          </div>
          <div class="form-group">
            <%= f.text_area :content, class: "form-control textarea_content hide", rows: 3, placeholder: t('views.forum.index.placeholders.content') %>
            <div
              id="question_content_editable"
              class="form-control editable-content"
              contenteditable="true"
              placeholder="<%= t('views.forum.index.placeholders.content') %>"
            ></div>
          </div>
          <div class="form-group">
            <%= f.file_field :archive, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit t('views.forum.index.buttons.create_question'), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
