<h2 class="mt0 mb20 lined-title">
  <span>
    <%= t('views.broadcasts.index.title').capitalize %>
  </span>
</h2>

<hr>

<div class="row">
  <div class="col-sm-8">
    <div class="panel">
      <div class="panel-body">
        <h2 class="mt0"><%= @broadcast.title %></h2>

        <p class="info-list text-default">
          <i class="ico-calendar3"></i> <%= @broadcast.schedule_time_str %>
          <!-- <i class="ico-user"></i> 2 usuários irão participar -->

          <% if @broadcast.badge %>
            <span>
              <i class="ico-medal"></i> <%= @broadcast.badge_name %>
            </span>
          <% end %>

          <span>
            <i class="ico-trophy"></i>
            <%= "#{@broadcast.points} #{t('views.general.points')}" %>
          </span>

          <span>
            <i class="ico-users"></i>
            <%= t('views.general.views', count: @broadcast.visualizations.size) %>
          </span>

          <span class="Broadcast-status Broadcast-status--<%= @broadcast.status %> pull-right">
            <%= t("views.broadcasts.status.#{@broadcast.status}") %>
          </span>
        </p>

        <div class="description" style="word-wrap: break-word;">
          <%= (@broadcast.description || "").html_safe %>
        </div>

        <%= render partial: 'embed_video', locals: { broadcast: @broadcast } %>
      </div>

      <% if @broadcast_status == 'will_start' %>
      <div class="col-sm-12">
        <hr class="mt5 mb5">
      </div>

      <ul class="list-table pa10">
        <li class="text-left" style="width: 90px;">
          <div class="img-group img-group-stack">
            <img src="<%= image_url 'avatar/avatar3.jpg' %>" alt="" class="img-circle">
            <img src="<%= image_url 'avatar/avatar4.jpg' %>" alt="" class="img-circle">
            <span class="more img-circle">2+</span>
          </div>
        </li>

        <li class="text-left">
          <p class="nm"><a href="javascript:void(0);" class="semibold">4 pessoas</a> irão participar. <a href="#" class="semibold">Participe você tambem</a></p>
        </li>
      </ul>

      <% end %>
    </div>
  </div>

  <!-- comments widget -->
  <div class="col-sm-4">
    <div class="fixed-sidebar">
      <%= render partial: "comments/widget", locals: {commentable: @broadcast} %>
    </div>
  </div>
</div>

