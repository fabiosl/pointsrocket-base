<div class="table-responsive panel-collapse pull out">
  <table class="table table-hover" id="table1">
    <tbody>
      <% users.decorate.each_with_index do |user, index| %>
        <tr style="<%= 'background-color: #f5f5f5' if user.id == current_user_ranking[:user].id %>">
          <td style="width: 5%;" class="text-right">
            <%= index + 1 %>
          </td>
          <td style="width: 5%;">
            <div class="pos-relative mt5 mb5">
              <% if user.admin_current_domain %>
                <i class="ico-crown large-user-admin-ico" title="Admin"></i>
              <% end %>
              <%= image_tag user.avatar.url(:s50x50), :class => "img-circle" %>
            </div>
          </td>
          <td>
            <%= link_to user.name, user_path(user) %>
          </td>
          <td style="width: 10%;" class="text-center">
            <%= user.ranking_points %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>