<div class="well well-default">
  <div class="row">
    <div class="col-md-6">
      <h2><%= t('views.users.index.title') %></h2>
    </div>
    <div class="col-md-6">
      <%= search_form_for @user_query do |f| %>
        <div class="col-xs-10 np">
          <%= f.search_field :name_cont, class: "form-control" %>
        </div>

        <%#= f.condition_fields do |c| %>
          <%#= c.attribute_fields do |a| %>
            <%# a.attribute_select associations: [:comments] %>
          <%# end %>

        <%# end %>


        <div class="col-xs-2 pr0">
          <%= button_tag(type: "submit", class: "form-control btn btn-default nm") do %>
            <i class="ico-search"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to t('views.users.buttons.new'), new_user_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<div class="well well-default">
  <div class="row" id="shuffle-grid">
    <% @users.each_with_index do |user, index| %>
      <%= render user %>

      <% if (index + 1) % 4 == 0 %>
        <div class="clearfix visible-lg"></div>
      <% end %>

      <% if (index + 1) % 3 == 0 %>
        <div class="clearfix visible-md"></div>
      <% end %>

      <% if (index + 1) % 2 == 0 %>
        <div class="clearfix visible-sm"></div>
      <% end %>

    <% end %>
  </div>
</div>

<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
